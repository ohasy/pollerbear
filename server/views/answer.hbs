      {{!--  --}}
        <div class="row col s12 share-section container white">
              <div class="col s12 m6 l6 share-block hoverable z-depth1">
                  <p class="flow-text left-align">Add Question</p>
                  <p class="flow-text grey-text darken-text-3 left-align">You can make your own poll, its very simple</p>
                  <a class="btn red lighten-3 waves-effect waves-teal add-question valign center-block" href="#" ><span>Get Started <i class="material-icons">add</i></span></a>
              </div>
              <div class="col s12 m6 l6 share-block hoverable">
                  <p class="flow-text left-align">Share Polls Link</p>
                  <p class="flow-text grey-text darken-text-3 left-align">Anyone with this url can access the polls result of this question</p>
                  <a class="btn red lighten-3 waves-effect waves-teal left share-poll center"><span class="center">Share <i class="material-icons">share</i></span></a>
              </div>
              </div>
        </div>

        
        <div class="col s12 white container row hoverable" id="share-link-block" >
                <label class="col s8" text="link">
                <input readonly value={{data._id}}  id="share-link-input" type="text" class="validate"/>
                </label>
                 <button class="btn center-align waves-effect grey darken-1 waves-dark white-text hoverable right" id="copy-button" >Copy
                    <i class="material-icons">book</i>
                </button>

        </div>
        <!-- content -->

        <div class="row container white z-depth2" id="votes-collection" >
            <h3 class="grey-text darken-2"> {{data.question}} </h3>
              <ol class="collection">
                {{#each data.choices}}
                  <li class="collection-item" type="a" id={{_id}}>{{text}}<span class="new badge"  data-badge-caption="People">{{votes}}</span></li>
                {{/each}}
            </ol>
            <div class="right">
              <button class="btn waves-effect grey darken-1 waves-dark white-text hoverable refresh-button">Refresh
                  <i class="material-icons right">refresh</i>
              </button>
            </div>
        </div>

